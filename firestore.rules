rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Auth helper functions
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    
    function isPartner(resId) {
      return request.auth != null && request.auth.token.restaurantId == resId;
    }

    // Restaurants Collection
    match /restaurants/{restaurantId} {
      // Allow partners to update their own restaurant
      allow update: if isPartner(restaurantId);
    }

    // Default Match - Preserve existing "Public Read, Admin Write" behavior
    match /{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
